{% extends 'layout.njk' %}

{% block content %}
    <div class="card table-container">
        <a href="/members/create">New Member</a>
        <table>
            <thead>
                <tr>
                    <th>Members</th>
                    <th>Email</th>
                    <th>Weight</th>
                    <th>Height</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                {%for member in members%}
                    <tr>
                        <td>
                            <span style="background-image: url({{member.avatar_url}})"></span>
                            {{member.name}}
                        </td>
                        <td>{{member.email}}</td>
                        <td>{{member.weight}} kg</td>
                        <td>{{member.height}} cm</td>
                        <td><a href="/members/{{member.id}}">Details</a></td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
    </div>
{% endblock content %}