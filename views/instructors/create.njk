{% extends 'layout.njk' %}

{% block content %}
    <form class="card" method="POST" action="/instructors">
        <section class="avatar" style="background: url(https://source.unsplash.com/collection/6800490/500x500) no-repeat center center / cover"></section>
        <section class="details">

            <h3>New Instructor</h3>

            <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type="url"
                        name="avatar_url"
                        placeholder="http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Instructor</div>
                <div>
                    <input 
                        type="text"
                        name="name" 
                        placeholder="Enter your name!"
                    >
                </div>
            </div>

            <div class="item">
                <div>Birth Date</div>
                <div>
                    <input
                        type="date"
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>Gender</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked> Male</span>
                    <span><input type="radio" name="gender" value="F"> Female</span>
                </div>
            </div>

            <div class="item">
                <div>Services</div>
                <div>
                    <input 
                        type="text" 
                        name="services"
                        placeholder="Enter your services separated by comma!"
                    >
                </div>
            </div>

            <button type="submit">LET'S GO!</button>

        </section>
    </form>
{% endblock content %}