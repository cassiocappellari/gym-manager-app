{%extends 'layout.njk'%}

{%block head%}
    <title>About</title>
{%endblock%}

{%block content%}


<div id="wrapper">
    <img src="{{data.avatarUrl}}" alt="Imagem de {{data.name}}">
    <h1>{{data.name}}</h1>
    <h2>{{data.role}}</h2>
    <p>{{data.about}}</p>
</div>

<div id="links-footer" class="links">
    {%for link in data.links%}
            <a href="{{link.url}}" target="_blank">{{link.name}}</a>
    {%endfor%}
</div>

{%endblock%}